.image-container {
    max-width: 100%; /* Ensure the container doesn't exceed its parent's width */
    width: auto; /* Allow the container to adjust its width based on the image */
    margin: 0 auto; /* Center the container horizontally */

    /* If you want to add some spacing around the image */
    padding: 10px;
    box-sizing: border-box;
}

.image-container img {
    display: block; /* Remove any residual spacing below the image */
    max-width: 100%; /* Make sure the image doesn't exceed its container's width */
    height: auto; /* Maintain the image's aspect ratio */
}
